---
  import { Image } from "astro:assets"

  interface Props {
    slug: string;
    title: string;
    desc: string;
    cover_book: string;
    author: string;
    book_link: string;
  }
  
  const {slug, title, desc, cover_book, author, book_link} = Astro.props
---

<!-- Implementar View transitions -->
<article>
  <h3 class="book-card__title">{title}</h3>
  <a class="book-card__btn" href={`/${slug}`}>
    <Image width="200" height="300" src={cover_book} alt=`Portada del libro ${title}`  />
  </a>
  <small><strong>Author: </strong> {author}</small>
  
</article>

<style>
  article {
    padding: 1em 2.5em;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 20px;
    border-radius: 9px;
    transition: box-shadow .2s ease-in-out;
  }

  .book-card__desc {
    color: var(--black);
  }

  .book-card__title {
    color: var(--black);
    text-align: center;
  }

  .book-card__btn img {
    border-radius: 8px;
    transform: scale(1);
    transition: transform .2s ease-in-out;
  }.book-card__btn img:hover {
    transform: scale(1.1);
  }
</style>
